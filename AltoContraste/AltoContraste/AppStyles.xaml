<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AltoContraste">
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="Light">
      <SolidColorBrush x:Key="MyButttonBrush" Color="DarkSalmon"/>
    </ResourceDictionary>
    <ResourceDictionary x:Key="Dark">
      <SolidColorBrush x:Key="MyButttonBrush" Color="LightGreen"/>
    </ResourceDictionary>
    <!--https://docs.microsoft.com/en-us/windows/uwp/design/accessibility/high-contrast-themes-->
    <ResourceDictionary x:Key="HighContrast">
      <SolidColorBrush x:Key="MyButttonBrush" Color="{ThemeResource SystemColorButtonFaceColor}"/>
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
